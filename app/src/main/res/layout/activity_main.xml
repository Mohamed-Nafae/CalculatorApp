<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:textAlignment="center"
    tools:context=".MainActivity">

    <View
        android:id="@+id/view"
        android:layout_width="wrap_content"
        android:layout_height="183dp"
        android:background="#5A4B47"
        app:layout_constraintBottom_toTopOf="@+id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="392dp"
        android:layout_height="150dp"
        android:layout_marginTop="16dp"
        android:fontFamily="sans-serif-light"
        android:gravity="center|right"
        android:text="0"
        android:textAppearance="@style/TextAppearance.AppCompat.Display3"
        android:textColor="@color/white"
        android:textDirection="ltr"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="0dp"
        android:layout_height="550dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="69dp">

            <Button
                android:id="@+id/buttonclean"
                android:layout_width="100dp"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:onClick="cleanCal"
                android:text="AC"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonmoinorplus"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:onClick="clickNumber"
                android:text="+/-"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttonperssontage"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-light"
                android:onClick="clickoperation"
                android:text="%"
                android:textSize="24sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/buttondiv"
                android:layout_width="111dp"
                android:layout_height="match_parent"
                android:background="@drawable/border1"
                android:fontFamily="sans-serif-black"
                android:onClick="clickoperation"
                android:text="รท"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:padding="0dp">

            <Button
                android:id="@+id/button7"
                android:layout_width="wrap_content"
                android:layout_height="110dp"

                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="7"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button8"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="8"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button9"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="9"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/buttonfois"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border1"
                android:fontFamily="sans-serif-black"
                android:onClick="clickoperation"
                android:text="*"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <Button
                android:id="@+id/button4"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="4"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button5"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="5"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button6"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="6"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/buttonmoin"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border1"
                android:fontFamily="sans-serif-black"
                android:onClick="clickoperation"
                android:text="-"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />


        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="110dp">

            <Button
                android:id="@+id/button1"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="1"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="2"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/button3"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border"
                android:fontFamily="sans-serif-black"
                android:onClick="clickNumber"
                android:text="3"
                android:textSize="24sp"
                android:textStyle="italic" />

            <Button
                android:id="@+id/buttonplus"
                android:layout_width="wrap_content"
                android:layout_height="110dp"
                android:background="@drawable/border1"

                android:fontFamily="sans-serif-black"
                android:onClick="clickoperation"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/button0"
            android:layout_width="200.2dp"
            android:layout_height="110dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif-black"
            android:maxHeight="110dp"
            android:onClick="clickNumber"
            android:padding="12dp"
            android:text="0"
            android:textSize="24sp"
            android:textStyle="italic" />

        <Button
            android:id="@+id/button"
            android:layout_width="100dp"
            android:layout_height="110dp"
            android:background="@drawable/border"
            android:fontFamily="sans-serif-black"
            android:onClick="clickNumber"
            android:text="."
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonequale"
            android:layout_width="111dp"
            android:layout_height="110dp"
            android:background="@drawable/border1"
            android:fontFamily="sans-serif-black"
            android:onClick="clickoperation"
            android:text="="
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>